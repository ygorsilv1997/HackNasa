@{
    ViewBag.Title = "Home Page";
}

<head>
    <link href='https://fonts.googleapis.com/css?family=Josefin+Sans' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    <style>
        html {
            margin: 0;
            height: 100%;
        }

        .index {
            font-family: 'Raleway', sans-serif;
            margin: 0;
            height: 100%;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            background: black;
            color: #ccc;
        }

        .background {
            background-image: url(../Content/images/background-nebulosa.jpg);
            color: #ccc;
            background-repeat: no-repeat;
            background-size: cover;
        }

        h1 {
            padding: 0;
            margin: 0;
            letter-spacing: 20px;
        }

        em {
            font-family: 'Josefin Sans', sans-serif;
            color: currentColor;
            font-size: 15vmin;
            position: relative;
            font-style: normal;
            width: 20vmin;
            text-align: center;
        }

        .btn-comecar {
            color: #2ec6f8;
            font-size: 19pt;
            text-decoration: none;
        }

            .btn-comecar:hover {
                color: #af7aac;
                /*font-weight: 800;*/
                text-decoration: none;
            }

        @@media (max-width: 1028px) {
            h1 {
                letter-spacing: 0px;
            }
        }

        @@media (max-width: 680px) {
            h1 {
                font-size: 10pt;
            }
        }
    </style>
</head>
<body class="background index">
    <div class="row text-center">
        <h1>
            <em>N</em>
            <em>E</em>
            <em>B</em>
            <em>U</em>
            <em>L</em>
            <em>O</em>
            <em>S</em>
            <em>A</em>
        </h1>
        <a class=btn-comecar>Começar ></a>
    </div>
</body>
